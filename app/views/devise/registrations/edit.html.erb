<div class="layout-edit-user">
  <div class="left-edit-user">
      <button class="edit-user-buttons" id="reset-password-button">Reset Password</button>
      <button class="edit-user-buttons" id="Back" onclick="history.back(-1)">Go Back</button>
  </div>
 
  <div class="right-edit-user users-right">
    <div class="content-top">
      <h2><%= current_user.name %></h2>
      <table class="profile-container">
        <tr><td>Current Bank Value:</td><td>₢ <%= current_user.bank_value %></td></tr>
        <tr><td>Position:</td><td><%= current_user.position %></td></tr>
        <tr><td>Team:</td><td><%= current_user.team %></td></tr>
        <tr><td>Shift Length:</td><td><% if current_user.ten_hour_shift %> 10 hour shift <% else %> 8 hour shift <% end %></td></tr>
        <tr><td>Shift:</td><td><%= @shift_start %> – <%= @shift_end %></td></tr>
        <tr><td>Work Days:</td><td><%= @workdays.chop.chop %></td></tr>
        </table>
    </div>
    <div class="content-bottom">
      <div class="upcoming-requests-tab">
        <h2>Upcoming Requests</h2>
        <div class="upcoming-body">
          <table class="requests">
            <% current_user.pto_requests.each do |request| %>
              <% if request.request_date > Date.today %>
              <tr>
              <td><b>Date:</b> <%= request.request_date %></td>
              <td><b>Cost:</b> <%= request.cost %></td>
              <td><b>Reason:</b> <%= request.reason %></td>  
              <td><%= link_to "Delete", pto_request_path(request), data: {
                  :confirm => "Are you sure?"
              }, :method => :delete %></td>
              <% end %>
              </tr>
            <% end %> 
          </table>
        </div> 
      </div>
      <div class="past-requests-tab">
        <h2>Past Requests</h2>
        <div class="upcoming-body">
            <table class="requests">
              <% current_user.pto_requests.each do |request| %>
              <% if request.request_date <= Date.today %>
              <tr>
              <td><b>Date:</b> <%= request.request_date %></td>
              <td><b>Cost:</b> <%= request.cost %></td>
              <td><b>Reason:</b> <%= request.reason %></td>
              </tr>
              <% end %>
              <% end %>
            </table>
          </div>
      </div>
  </div>
      <div id="update-password" class="password-modal">
          <div class="update-password-content">
              <div class="modal-header">Update Password
                <div class="close2">x</div></div>
                <div class="password-form">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="field">
                  <%= f.hidden_field :email, :value => current_user.email %>
                </div>

                <div class="field">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password" %>
                </div>
                <br>
                <div class="field">
                <%= f.label :password %> <em><%= @minimum_password_length %> characters minimum</em>
                <br>
                <%= f.password_field :password, autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                <% end %>
                </div>
                <br>
                <div class="field">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>
                <br>
                <div class="actions">
                  <%= f.submit "Update" %>
                </div>
                <% end %>
              </div>
            </div>
          </div>
  </div>
</div>

<script>
    var modal = document.getElementById('update-password');
    var btn = document.getElementById("reset-password-button");
    var span = document.getElementsByClassName("close2")[0];
    btn.onclick = function() {
      modal.style.display = "block";
    }
    span.onclick = function() {
      modal.style.display = "none";
    }
    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
</script>